{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "jsx": "preserve",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@shared/*": [
        "../shared/*"
      ]
    },
    "resolveJsonModule": true,
    "strict": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "../shared/**/*.ts",
  ]
}